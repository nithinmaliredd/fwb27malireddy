extends layout

block content
  h1= title
  p Welcome to the fan pug
  div(class="container-fluid")
        div(class="row")
            -
                let fan = [
                    {
                        "brand": "bajaj",
                        "material": "iron",
                        "cost": 10
                    },
                    {
                        "brand": "hunter",
                        "material": "iron",
                        "cost": 12
                    },
                    {
                        "brand": "emerson",
                        "material": "iron",
                        "cost": 9
                    },                   
                ]
            each v,index in fan
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.brand}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.material}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
  